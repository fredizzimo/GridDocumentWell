<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                    xmlns:vs="clr-namespace:Microsoft.VisualStudio.PlatformUI.Shell.Controls;assembly=Microsoft.VisualStudio.Shell.ViewManager"
                    xmlns:gw="clr-namespace:GridDocumentWell"
                    >
    <Style x:Key="{x:Type gw:GridDocumentGroupContainerControl}" TargetType="{x:Type gw:GridDocumentGroupContainerControl}">
        <Setter Property="UIElement.Focusable" Value="False" />
        <Setter Property="InputMethod.IsInputMethodSuspended" Value="True" />
        <Setter Property="ui:SplitterItemsControl.Orientation" Value="{Binding Orientation}" />
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type gw:GridDocumentGroupContainerControl}">
                    <Grid>
                        <vs:DockTarget DockSiteType="NonDraggable" Background="#00FFFFFF" DockTargetType="Inside" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>